<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CareBridge - Donate</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <style>
      :root {
        --primary: #6c63ff;
        --secondary: #2a2d3e;
        --accent: #ff6b6b;
        --background: #1a1c2e;
        --card: #2a2d3e;
        --text: #ffffff;
        --text-secondary: #b3b3b3;
        --success: #4caf50;
        --border-radius: 16px;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: var(--background);
        color: var(--text);
        line-height: 1.6;
        background-image: radial-gradient(
            circle at 10% 20%,
            rgba(108, 99, 255, 0.1) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 90% 80%,
            rgba(255, 107, 107, 0.1) 0%,
            transparent 50%
          );
      }

      .donation-container {
        max-width: 800px;
        margin: 60px auto;
        padding: 40px;
      }

      .donation-form {
        background: var(--card);
        padding: 50px;
        border-radius: var(--border-radius);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      h2 {
        text-align: center;
        font-size: 2.5em;
        margin-bottom: 40px;
        background: linear-gradient(45deg, var(--primary), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        letter-spacing: 2px;
      }

      .amount-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
      }

      .amount-option {
        display: none;
      }

      .amount-label {
        background: var(--secondary);
        padding: 15px;
        border-radius: var(--border-radius);
        text-align: center;
        cursor: pointer;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
      }

      .amount-option:checked + .amount-label {
        background: linear-gradient(45deg, var(--primary), var(--accent));
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(108, 99, 255, 0.3);
      }

      .custom-amount {
        background: var(--secondary);
        padding: 15px;
        border-radius: var(--border-radius);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text);
        width: 100%;
        margin-bottom: 40px;
        font-size: 1.1em;
      }

      .payment-methods {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
      }

      .payment-method {
        display: none;
      }

      .payment-label {
        background: var(--secondary);
        padding: 20px;
        border-radius: var(--border-radius);
        text-align: center;
        cursor: pointer;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
      }

      .payment-method:checked + .payment-label {
        background: linear-gradient(45deg, var(--primary), var(--accent));
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(108, 99, 255, 0.3);
      }

      .card-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 40px;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .form-label {
        color: var(--text-secondary);
        font-size: 0.9em;
        margin-left: 5px;
      }

      .form-input {
        background: var(--secondary);
        padding: 18px;
        border-radius: var(--border-radius);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text);
        width: 100%;
        font-size: 1.1em;
        transition: all 0.3s ease;
      }

      .form-input:focus {
        border-color: var(--primary);
        outline: none;
        box-shadow: 0 0 0 2px rgba(108, 99, 255, 0.2);
      }

      .form-input::placeholder {
        color: var(--text-secondary);
        opacity: 0.7;
      }

      .submit-btn {
        background: linear-gradient(45deg, var(--primary), var(--accent));
        color: var(--text);
        padding: 18px 40px;
        border: none;
        border-radius: var(--border-radius);
        cursor: pointer;
        font-size: 1.2em;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: 20px;
      }

      .submit-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(108, 99, 255, 0.3);
      }

      .payment-icon {
        font-size: 1.5em;
      }

      @media (max-width: 768px) {
        .donation-container {
          padding: 20px;
        }

        .card-info {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar', { currentPage: 'donate' }) %>

    <div class="donation-container">
      <form class="donation-form">
        <h2>Make a Donation</h2>

        <!-- Amount Selection -->
        <div class="amount-grid">
          <input
            type="radio"
            name="amount"
            id="amount25"
            class="amount-option"
            value="25"
          />
          <label for="amount25" class="amount-label">$25</label>

          <input
            type="radio"
            name="amount"
            id="amount50"
            class="amount-option"
            value="50"
          />
          <label for="amount50" class="amount-label">$50</label>

          <input
            type="radio"
            name="amount"
            id="amount100"
            class="amount-option"
            value="100"
          />
          <label for="amount100" class="amount-label">$100</label>

          <input
            type="radio"
            name="amount"
            id="amount200"
            class="amount-option"
            value="200"
          />
          <label for="amount200" class="amount-label">$200</label>
        </div>

        <input
          type="number"
          class="custom-amount"
          placeholder="Custom Amount"
        />

        <!-- Payment Methods -->
        <div class="payment-methods">
          <input
            type="radio"
            name="paymentMethod"
            id="card"
            class="payment-method"
            checked
          />
          <label for="card" class="payment-label">
            <i class="fas fa-credit-card payment-icon"></i>
            Card
          </label>

          <input
            type="radio"
            name="paymentMethod"
            id="paypal"
            class="payment-method"
          />
          <label for="paypal" class="payment-label">
            <i class="fab fa-paypal payment-icon"></i>
            PayPal
          </label>

          <input
            type="radio"
            name="paymentMethod"
            id="googlepay"
            class="payment-method"
          />
          <label for="googlepay" class="payment-label">
            <i class="fab fa-google-pay payment-icon"></i>
            Google Pay
          </label>
        </div>

        <!-- Card Information -->
        <div class="card-info">
          <div class="form-group">
            <label class="form-label">Card Number</label>
            <input
              type="text"
              class="form-input"
              placeholder="1234 5678 9012 3456"
            />
          </div>
          <div class="form-group">
            <label class="form-label">Card Holder Name</label>
            <input type="text" class="form-input" placeholder="John Doe" />
          </div>
          <div class="form-group">
            <label class="form-label">Expiry Date</label>
            <input type="text" class="form-input" placeholder="MM/YY" />
          </div>
          <div class="form-group">
            <label class="form-label">CVV</label>
            <input type="text" class="form-input" placeholder="123" />
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="submit-btn">
          <i class="fas fa-heart"></i> Complete Donation
        </button>
      </form>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector(".donation-form");
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          // Add your payment processing logic here
          alert("Thank you for your donation!");
        });
      });
    </script>
  </body>
</html>
